        "id": 13,
        "name": "Others",
        "subcategories": [
          "miscellaneous_indicators",
          "cross_category_data"
        ],
        "series_prefix": "OT",
        "update_frequency": "varies"
      }
    },
    "flat_files": {
      "available_downloads": {
        "prices": {
          "filename": "prices_m_en.zip",
          "frequency": "monthly",
          "contents": [
            "consumer_prices.csv",
            "producer_prices.csv",
            "service_prices.csv",
            "price_indices_metadata.xlsx"
          ]
        },
        "flow_of_funds": {
          "filename": "fof_q_en.zip",
          "frequency": "quarterly",
          "contents": [
            "flow_of_funds_accounts.csv",
            "sectoral_balance_sheets.csv",
            "financial_transactions.csv"
          ]
        },
        "tankan": {
          "filename": "tankan_q_en.zip",
          "frequency": "quarterly",
          "contents": [
            "business_confidence.csv",
            "economic_conditions.csv",
            "forecast_data.csv"
          ]
        },
        "balance_of_payments": {
          "filename": "bp_m_en.zip",
          "frequency": "monthly",
          "contents": [
            "current_account.csv",
            "financial_account.csv",
            "trade_balance.csv"
          ]
        },
        "bis_statistics": {
          "filename": "bis_q_en.zip",
          "frequency": "quarterly",
          "contents": [
            "international_banking.csv",
            "cross_border_claims.csv"
          ]
        }
      }
    },
    "series_code_structure": {
      "format": "[CATEGORY_PREFIX][SERIES_NUMBER]",
      "examples": {
        "IR01": "Interest rate series 01",
        "FM02": "Financial market series 02",
        "PR03": "Price series 03"
      }
    },
    "data_specifications": {
      "file_formats": [".csv", ".xlsx", ".xls", ".txt", ".pdf"],
      "character_encoding": "UTF-8 or Shift_JIS",
      "date_formats": ["YYYY-MM-DD", "YYYY/MM/DD", "YYYYMM"],
      "missing_values": ["NA", "-", "..."],
      "decimal_separator": ".",
      "thousands_separator": ","
    },
    "update_schedule": {
      "daily_updates": ["9:00", "12:00", "15:00"],
      "timezone": "JST (UTC+9)",
      "release_calendar": "Available on website"
    },
    "limitations": {
      "api": "No public API available",
      "rate_limits": "Unknown - manual access only",
      "historical_data": "Extended history requires email request",
      "bulk_download": "Manual download required"
