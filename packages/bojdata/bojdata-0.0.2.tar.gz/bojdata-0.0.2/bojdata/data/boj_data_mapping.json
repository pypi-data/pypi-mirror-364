{
  "boj_data_mapping": {
    "description": "Comprehensive mapping of Bank of Japan statistical data",
    "last_updated": "2025-01-24",
    "base_url": "https://www.stat-search.boj.or.jp",
    "access_methods": {
      "web_search": {
        "endpoint": "/ssi/cgi-bin/famecgi2",
        "methods": ["by_category", "by_name", "by_code"]
      },
      "flat_files": {
        "base_path": "/info/dload_en.html",
        "update_time": "10:00 JST"
      }
    },
    "categories": {
      "interest_rates": {
        "id": 1,
        "name": "Interest Rates on Deposits and Loans",
        "subcategories": [
          "deposit_rates",
          "loan_rates",
          "interest_rate_spreads"
        ],
        "series_prefix": "IR",
        "update_frequency": "monthly"
      },
      "financial_markets": {
