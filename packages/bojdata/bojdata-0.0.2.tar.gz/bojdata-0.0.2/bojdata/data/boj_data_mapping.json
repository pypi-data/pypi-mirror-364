        "series_prefix": "LN",
        "update_frequency": "monthly"
      },
      "balance_sheets": {
        "id": 6,
        "name": "Balance Sheets",
        "subcategories": [
          "boj_balance_sheet",
          "financial_institution_bs",
          "asset_liability_composition"
        ],
        "series_prefix": "BS",
        "update_frequency": "monthly"
      },
      "flow_of_funds": {
        "id": 7,
        "name": "Flow of Funds",
