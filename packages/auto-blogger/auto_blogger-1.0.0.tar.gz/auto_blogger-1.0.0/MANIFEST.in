# Include documentation
include README.md
include LICENSE
include requirements.txt
include *.md

# Include configuration files
recursive-include configs *.json
recursive-include configs *.txt

# Include scripts
recursive-include scripts *.py
recursive-include scripts *.sh
recursive-include scripts *.bat
recursive-include scripts *.ps1

# Include documentation
recursive-include docs *.md
recursive-include docs *.txt

# Include assets
include icon.png
include *.png
include *.ico
include *.svg

# Include website assets
recursive-include website *.html
recursive-include website *.css
recursive-include website *.js
recursive-include website *.png
recursive-include website *.svg
recursive-include website *.ico
recursive-include website *.xml
recursive-include website *.txt
recursive-include website *.yml

# Include launcher scripts
include autoblog
include autoblog_launcher.py
include launch_blogger.py
include install.sh
include *.command

# Include package files
include setup.py
include pyproject.toml

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.log
global-exclude logs/*
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov