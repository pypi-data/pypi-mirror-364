{
  "mcpServers": {
    "physionetmcp": {
      "command": "uv",
      "args": ["run", "--with", "physionetmcp", "physionetmcp", "run"],
      
      "db": [
        "mimic-iv",
        "aumc", 
        "eicu",
        "mitdb",
        "ptb-xl"
      ],
      
      "dataRoot": "~/physionet_data",
      "storageFormat": "duckdb",
      
      "auth": {
        "username": "your_physionet_username",
        "password": "your_physionet_password"
      },
      
      "maxConcurrentDownloads": 2,
      "queryTimeoutSeconds": 300,
      "maxResultRows": 10000,
      "enableQueryCache": true,
      "compressData": true,
      "vacuumSchedule": "daily",
      
      "databaseConfigs": {
        "mimic-iv": {
          "downloadOptions": {
            "includeNotes": false,
            "sampleSize": null
          }
        },
        "aumc": {
          "enabled": true,
          "customPath": null
        }
      },
      
      "logLevel": "INFO",
      "enableMetrics": false
    }
  }
} 