# Azure AD Configuration for CodeSentinel MCP Server
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# API Endpoint
TEAMCENTER_API_HOST=https://codesentinel.azurewebsites.net

# Azure AD App Registration (get from your admin)
AZURE_CLIENT_ID=your-client-id-here
AZURE_TENANT_ID=your-tenant-id-here

# Optional: Bearer token (get using get_azure_token.py)
AZURE_BEARER_TOKEN=your-bearer-token-here