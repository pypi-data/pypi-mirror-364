# Environment variables for youtube-ai-resume
# Copy this file to .env and fill in your secrets

# OpenAI API key (required for summarization)
OPENAI_API_KEY=

# Google Cloud credentials (required for voice narration)
# Path to your Google service account JSON file
youtube-ai-resume will look for this path in config.json as "google_credentials"
GOOGLE_APPLICATION_CREDENTIALS=

# Optional: Override default output language (e.g., en, pt-BR)
OUTPUT_LANG=pt-BR

# Optional: Override default OpenAI model (e.g., gpt-4.1-mini)
OPENAI_MODEL=gpt-4.1-mini

# Optional: Enable voice narration by default (true/false)
VOICE_ENABLED=false
