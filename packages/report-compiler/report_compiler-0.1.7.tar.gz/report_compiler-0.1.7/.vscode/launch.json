{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Report Compiler - Parsons Report",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "${workspaceFolder}/examples/parsons-report/parsons-report.docx",
                "${workspaceFolder}/examples/parsons-report/debug_output.pdf",
                "--keep-temp",
                "--debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Master Report",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "${workspaceFolder}/examples/Master Report.docx",
                "${workspaceFolder}/examples/master_debug_output.pdf",
                "--keep-temp",
                "--debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Example File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "${workspaceFolder}/examples/simple-report/bridge_report.docx",
                "${workspaceFolder}/examples/simple-report/debug_output.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Custom Input",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "${input:docxFile}",
                "${input:outputPdf}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Error Testing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "nonexistent_file.docx",
                "test_error.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Legacy Report Compiler - Cross-Check",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler_legacy.py",
            "args": [
                "${workspaceFolder}/examples/simple-report/bridge_report.docx",
                "${workspaceFolder}/examples/simple-report/legacy_debug_output.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        }
    ],
    "inputs": [
        {
            "id": "docxFile",
            "description": "Path to the input DOCX file",
            "default": "${workspaceFolder}/examples/simple-report/bridge_report.docx",
            "type": "promptString"
        },
        {
            "id": "outputPdf",
            "description": "Path for the output PDF file",
            "default": "${workspaceFolder}/examples/simple-report/custom_debug_output.pdf",
            "type": "promptString"
        }
    ]
}