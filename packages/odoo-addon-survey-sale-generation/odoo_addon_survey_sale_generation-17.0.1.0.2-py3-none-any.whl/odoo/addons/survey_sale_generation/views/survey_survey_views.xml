<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_form" model="ir.ui.view">
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form" />
        <field name="arch" type="xml">
            <group name="options" position="inside">
                <group name="sale_options" string="Sales">
                    <field name="generate_quotations" />
                    <field
                        name="sale_order_template_id"
                        invisible="not generate_quotations"
                    />
                    <field
                        name="send_quotation_to_customer"
                        invisible="not generate_quotations"
                    />
                    <field
                        name="quotation_mail_template_id"
                        options="{'no_open': True, 'no_create': True}"
                        invisible="not generate_quotations and not send_quotation_to_customer"
                    />
                    <field name="crm_team_id" invisible="not generate_quotations" />
                </group>
            </group>
        </field>
    </record>
</odoo>
