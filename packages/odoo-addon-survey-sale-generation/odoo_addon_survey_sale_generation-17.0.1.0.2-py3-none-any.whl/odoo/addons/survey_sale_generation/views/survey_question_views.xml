<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_question_form" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <page name="answers" position="after">
                <field name="generate_quotations" invisible="1" />
                <page
                    string="Answers"
                    name="answers"
                    invisible="question_type != 'numerical_box' or not generate_quotations"
                >
                    <group>
                        <group
                            name="Linked product"
                            invisible="question_type != 'numerical_box'"
                        >
                            <field name="product_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </page>
            </page>
            <xpath expr="//field[@name='suggested_answer_ids']" position="before">
                <group
                    name="Linked product"
                    invisible="question_type not in ['simple_choice', 'multiple_choice']"
                >
                    <field
                        name="product_uom_qty_question_id"
                        domain="[('survey_id', '=', survey_id), ('question_type', '=', 'numerical_box')]"
                    />
                </group>
            </xpath>
            <xpath expr="//field[@name='value']" position="after">
                <field
                    name="product_ids"
                    column_invisible="parent.question_type == 'matrix'"
                    widget="many2many_tags"
                />
                <field
                    name="sale_order_template_id"
                    column_invisible="parent.question_type != 'simple_choice'"
                />
            </xpath>
            <xpath expr="//field[@name='comments_allowed']/.." position="after">
                <group name="sales" string="Sales">
                    <field
                        name="show_in_sale_order_comment"
                        invisible="question_type in ['matrix', 'simple_choice', 'multiple_choice']"
                    />
                    <field name="sale_order_field" widget="selection" />
                    <field name="allowed_sale_order_field_ids" invisible="1" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
