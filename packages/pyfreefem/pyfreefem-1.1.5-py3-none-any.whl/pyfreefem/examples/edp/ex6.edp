mesh Th=square(10,10);
fespace Fh(Th,P1);
Fh u,v;

solve laplace(u,v)=
    int2d(Th)(dx(u)*dx(v)+dy(u)*dy(v))
        -int2d(Th)(v)
        IF BC
        +on(1,2,3,4,u=0)
        ENDIF
        \\; 
        //This final semicolumn character will be put 
        //at the end of the last previous line

