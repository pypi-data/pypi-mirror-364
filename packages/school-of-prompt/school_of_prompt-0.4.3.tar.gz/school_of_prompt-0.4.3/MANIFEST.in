# Include essential files for users
include README.md
include RELEASE_NOTES.md
include requirements.txt

# Include the main package
recursive-include school_of_prompt *.py

# Include examples for users
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.csv
recursive-include examples *.jsonl

# Exclude development and build artifacts
exclude CLAUDE.md
exclude pytest.ini
exclude .bumpversion.cfg
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude test_cache *
recursive-exclude htmlcov *
recursive-exclude dist *
recursive-exclude *.egg-info *
recursive-exclude school_of_prompt __pycache__
recursive-exclude school_of_prompt *.pyc
recursive-exclude school_of_prompt *.pyo
recursive-exclude examples __pycache__
recursive-exclude examples *.pyc
recursive-exclude examples *.pyo
global-exclude .DS_Store
global-exclude *.log
global-exclude *.tmp
global-exclude .git*
global-exclude .github*