{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Tests (uv)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/run_all_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "uv"
        },
        {
            "name": "Run Single Test File (uv)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "uv"
        },
        {
            "name": "Debug MCP Server (uv)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ONTOLOGY": "basic"
            },
            "python": "uv"
        },
        {
            "name": "Debug MCP Server (GitHub Ontology, uv)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ONTOLOGY": "github"
            },
            "python": "uv"
        },
        {
            "name": "Test Specific: MCP Server (uv)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests/test_mcp.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "uv"
        }
    ]
} 