# MEM0AI INTEGRATION
# =============================================

# mem0AI Service Configuration
MEM0AI_HOST=localhost
MEM0AI_PORT=8002
MEM0AI_TIMEOUT=60

# mem0AI Service Authentication - REQUIRED FOR PRODUCTION
MEM0AI_API_KEY=REPLACE_WITH_PRODUCTION_API_KEY

# Security Configuration (strict for production)
MEM0AI_USE_TLS=true
MEM0AI_VERIFY_SSL=true
MEM0AI_AUTH_RETRY_ATTEMPTS=5
MEM0AI_AUTH_RETRY_DELAY=2.0

