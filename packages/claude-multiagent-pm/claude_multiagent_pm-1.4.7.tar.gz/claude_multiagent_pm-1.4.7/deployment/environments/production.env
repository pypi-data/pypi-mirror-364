# PRODUCTION FEATURES
# =============================================

# Enable production monitoring (NEW variable names)
CLAUDE_MULTIAGENT_PM_ENABLE_ALERTING=true
CLAUDE_MULTIAGENT_PM_ALERT_THRESHOLD=80

