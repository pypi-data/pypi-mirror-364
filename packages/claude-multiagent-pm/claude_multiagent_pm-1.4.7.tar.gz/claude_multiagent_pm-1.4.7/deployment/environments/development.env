# MEM0AI INTEGRATION
# =============================================

# mem0AI Service Configuration
MEM0AI_HOST=localhost
MEM0AI_PORT=8002
MEM0AI_TIMEOUT=30

# mem0AI Service Authentication (REQUIRED for secure development)
# Generate a development API key using: claude-pm-security generate-key
MEM0AI_API_KEY=dev_key_with_sufficient_length_for_security_testing_12345

# Security Configuration (secure by default for better development practices)
MEM0AI_USE_TLS=false
MEM0AI_VERIFY_SSL=false
MEM0AI_AUTH_RETRY_ATTEMPTS=3
MEM0AI_AUTH_RETRY_DELAY=1.0

