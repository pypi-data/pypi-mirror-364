{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/workflow/implementation_declaration.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/workflow/research_tracker.py {project_root}"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/workflow/implementation_tracker.py {project_root}"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/workflow/memory_updater.py {project_root} --from-todos"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/workflow/todo_milestone_connector.py {project_root}"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/workflow/automated_commit_trigger.py {project_root}"
          }
        ]
      }
    ]
  }
}