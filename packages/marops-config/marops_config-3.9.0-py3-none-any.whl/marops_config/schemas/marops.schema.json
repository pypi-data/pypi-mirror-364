{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "MarOpsConfig",
  "properties": {
    "prod": {
      "type": "boolean",
      "default": false
    },
    "secure_cookie": {
      "type": "boolean",
      "default": false
    },
    "data_path": {
      "type": "string",
      "default": "/tmp/marops-data"
    },
    "backup_path": {
      "type": "string",
      "default": "/etc/marops-backup"
    },
    "hasura_admin_secret": {
      "type": "string",
      "default": "hasura-admin-secret"
    },
    "proxy": {
      "type": "boolean",
      "default": false
    },
    "proxy_host": {
      "type": "string",
      "default": "marops.greenroomrobotics.local"
    }
  }
}