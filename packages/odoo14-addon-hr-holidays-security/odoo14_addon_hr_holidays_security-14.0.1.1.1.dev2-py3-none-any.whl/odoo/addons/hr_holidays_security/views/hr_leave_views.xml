<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_leave_view_form_responsible" model="ir.ui.view">
        <field name="model">hr.leave</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager" />
        <field name="arch" type="xml">
            <field name="payslip_status" position="attributes">
                <attribute
                    name="groups"
                >hr_holidays.group_hr_holidays_responsible</attribute>
            </field>
            <field name="employee_id" position="attributes">
                <attribute
                    name="groups"
                >hr_holidays.group_hr_holidays_responsible</attribute>
                <attribute
                    name="attrs"
                >{'required': [('holiday_type', '=', 'employee')], 'invisible': [('holiday_type', '!=', 'employee')]}</attribute>
                <attribute
                    name="domain"
                >['|', ('leave_manager_id', '=', uid), ('user_id', '=', uid)]</attribute>
            </field>
        </field>
    </record>
    <record id="hr_holidays.menu_hr_holidays_report" model="ir.ui.menu">
        <field
            name="groups_id"
            eval="[(6, 0, [ref('hr_holidays.group_hr_holidays_responsible')])]"
        />
    </record>
</odoo>
