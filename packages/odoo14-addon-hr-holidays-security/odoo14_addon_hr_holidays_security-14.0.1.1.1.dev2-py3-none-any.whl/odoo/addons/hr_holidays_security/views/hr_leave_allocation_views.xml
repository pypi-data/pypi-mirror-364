<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_leave_allocation_view_form" model="ir.ui.view">
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form" />
        <field name="arch" type="xml">
            <field name="holiday_status_id" position="before">
                <field name="allowed_holyday_status_ids" invisible="1" />
            </field>
            <field name="holiday_status_id" position="attributes">
                <attribute
                    name="domain"
                >[('id', 'in', allowed_holyday_status_ids)]</attribute>
            </field>
        </field>
    </record>
    <record id="hr_leave_allocation_view_form_manager" model="ir.ui.view">
        <field name="model">hr.leave.allocation</field>
        <field
            name="inherit_id"
            ref="hr_holidays.hr_leave_allocation_view_form_manager"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="employee_id" position="attributes">
                <attribute
                    name="groups"
                >hr_holidays.group_hr_holidays_responsible</attribute>
                <attribute
                    name="atrrs"
                >{'required': [('holiday_type', '=', 'employee')], 'invisible': [('holiday_type', '!=', 'employee')]}</attribute>
                <attribute
                    name="domain"
                >['|', ('leave_manager_id', '=', uid), ('user_id', '=', uid)]</attribute>
            </field>
        </field>
    </record>
    <record id="hr_leave_allocation_view_form_user" model="ir.ui.view">
        <field name="model">hr.leave.allocation</field>
        <field
            name="inherit_id"
            ref="hr_holidays_security.hr_leave_allocation_view_form_manager"
        />
        <field
            name="groups_id"
            eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"
        />
        <field name="arch" type="xml">
            <!-- It is important to leave the employee's domain empty so that the user with
            the All Approver permission can see all employees and select any of
            them. !-->
            <field name="employee_id" position="attributes">
                <attribute name="domain" />
            </field>

        </field>
    </record>
</odoo>
