<odoo>
    <record id="partner_view_buttons" model="ir.ui.view">
        <field name="name">mandate.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='banks']" position="inside">
                <field name="valid_mandate_id" invisible="not valid_mandate_id" />
                <div name="mandates" colspan="2">
                    <button
                        type="action"
                        class="btn-link"
                        name="%(account_payment_mandate.mandate_action)d"
                        context="{'search_default_partner_id': id, 'default_partner_id': id}"
                    >
                        <field
                            string="Mandate(s)"
                            name="mandate_count"
                            widget="statinfo"
                        />
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
