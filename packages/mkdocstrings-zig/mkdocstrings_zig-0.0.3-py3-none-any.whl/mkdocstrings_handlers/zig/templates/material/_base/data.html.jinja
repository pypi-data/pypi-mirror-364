{#- Generic data template. Update to fit your handler!

Context:
  data: The data to render.
  root (bool): Whether this is the root object, injected with `:::` in a Markdown page.
  heading_level (int): The HTML heading level to use.
  config (dict): The configuration options.
-#}

{% block logs scoped %}
  {#- Logging block.

  This block can be used to log debug messages, deprecation messages, warnings, etc.
  -#}
  {{ log.debug("Rendering " + data.path) }}
{% endblock logs %}

<div class="doc doc-object doc-data">
  {% with obj = data, html_id = data.path %}

    {% filter heading(
        heading_level,
        role="data",
        id=html_id,
        class="doc doc-heading",
        toc_label=('<code class="doc-symbol doc-symbol-toc doc-symbol-data"></code>&nbsp;'|safe if config.show_symbol_type_toc else '') + data.name,
      ) %}

      {% block heading scoped %}
        {#- Heading block.

        This block renders the heading for the data.
        -#}
        {% if config.show_symbol_type_heading %}<code class="doc-symbol doc-symbol-heading doc-symbol-data"></code>{% endif %}
        <span class="doc doc-object-name doc-data-name">{{ config.heading if config.heading and root else data.name }}</span>
      {% endblock heading %}

    {% endfilter %}

    <div class="doc doc-contents {% if root %}first{% endif %}">
      {% block contents scoped %}
        {#- Contents block.

        This block renders the contents of the data.
        It contains other blocks that users can override.
        Overriding the contents block allows to rearrange the order of the blocks.
        -#}
        {% if data.doc %}
        <div class="docstring">
            {{ data.doc | markdown | safe }}
        </div>
        {% endif %}
        
        {% if data.constants %}
          <h2>Constants</h2>
          {% for constant in data.constants %}
          <div class="constant">
            {% if constant.signature %}
            {{ constant.signature | highlight(language="zig") }}
            {% endif %}
            {# <h3>{{ constant.name }}</h3> #}
            {% if constant.doc %}
            <div class="docstring">
              {{ constant.doc | markdown | safe }}
            </div>
            {% endif %}
          </div>
          {% endfor %}
        {% endif %}
        
        {% if data.structs %}
          <h2>Structures</h2>
          {% for struct in data.structs %}
          <div class="struct">
            <h3>{{ struct.name }}</h3>
            {% if struct.signature %}
            {{ struct.signature | highlight(language="zig") }}
            {% endif %}
            {% if struct.doc %}
            <div class="docstring">
              {{ struct.doc | markdown | safe }}
            </div>
            {% endif %}
            {% if struct.fields %}
            <ul>
            {% for field in struct.fields %}
            <li><code>{{ field.name }}: {{ field.type }}</code>
            {% if field.doc %} - {{ field.doc }}{% endif %}</li>
            {% endfor %}
            </ul>
            {% endif %}
          </div>
          {% endfor %}
        {% endif %}
        
        {% if data.functions %}
          <h2>Functions</h2>
          {% for func in data.functions %}
          <div class="function">
            {# <h3>{{ func.name }}</h3> #}
            {{ func.signature | highlight(language="zig") }}
            {% if func.doc %}
            <div class="docstring">
              {{ func.doc | markdown | safe }}
            </div>
            {% endif %}
          </div>
          {% endfor %}
        {% endif %}
      {% endblock contents %}
    </div>

  {% endwith %}
</div>
