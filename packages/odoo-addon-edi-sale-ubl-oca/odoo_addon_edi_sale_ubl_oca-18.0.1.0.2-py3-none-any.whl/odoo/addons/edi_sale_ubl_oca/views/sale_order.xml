<odoo>
    <record model="ir.ui.view" id="view_order_form_orig">
        <field name="name">sale.order.form (in edi_sale_UBL)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="edi_sale_oca.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/list/field[@name='edi_id']"
                position="after"
            >
                <field name="edi_state_id" optional="hide" readonly="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//group[@name='edi']"
                position="inside"
            >
                <field name="edi_state_id" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_order_form">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="edi_sale_oca.view_order_form" />
        <field name="arch" type="xml">
            <group name="edi_main" position="inside">
                <field name="edi_state_id" readonly="1" />
            </group>
        </field>
    </record>
</odoo>
