{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Filesystem Operations MCP: Summarize Code",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/filesystem_operations_mcp/filesystem/summarize/code.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Filesystem Operations MCP: Run MCP Server",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": true,
            "module": "filesystem_operations_mcp.main",
            "cwd": "${workspaceFolder}/playground",
            "args": [
                "--mcp-transport",
                "sse",
                "--root-dir",
                "${workspaceFolder}/playground"
            ]
        },
        // Debug Tests config
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "args": [
                "-vv",
                "-s" // Disable Captures
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}